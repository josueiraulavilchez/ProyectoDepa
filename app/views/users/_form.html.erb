<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, id: :user_name, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :surname, "Apellido" %>
    <%= form.text_field :surname, id: :user_surname, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :dni, "DNI" %>
    <%= form.text_field :dni, id: :user_dni, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :profile, "Perfil" %>
    <%= form.select :profile, [["Administrador"], ["Gerente"], ["Asesor"]], { :include_blank => "Seleccionar perfil"}, id: :user_profile, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Crear Usuario", :class => "btn btn-primary" %>
  </div>
<% end %>
