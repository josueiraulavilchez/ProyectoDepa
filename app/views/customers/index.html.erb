<p id="notice"><%= notice %></p>

<h1>Lista de Clientes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>DNI</th>
      <th>Correo Electrónico</th>
      <th>Teléfono</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.surname %></td>
        <td><%= customer.dni %></td>
        <td><%= customer.mail %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.status %></td>
        <td><%= link_to 'Revisar Solicitud', edit_customer_path(customer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
