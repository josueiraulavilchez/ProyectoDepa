<p id="notice"><%= notice %></p>

<h1>Listado de Citas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Correo Electrónico</th>
      <th>Teléfono</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Lugar de Encuentro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.surname %></td>
        <td><%= meeting.mail %></td>
        <td><%= meeting.phone %></td>
        <td><%= meeting.date %></td>
        <td><%= meeting.time %></td>
        <td><%= link_to 'Mostrar', meeting %></td>
        <td><%= link_to 'Modificar', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Eliminar', meeting, method: :delete, data: { confirm: 'Haga click en Aceptar si desea eliminar la cita' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

